@model IEnumerable<weba_folder.Models.Type>
    
    <div class="pt-2">
        <div class="row">
            <div class="col-6">
                <h2> Type List</h2> 
            </div>
            <div class="col-6 text-right" >
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add New Item
                </a>
            </div>
        </div>
        <br>

        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Type Name</th>
                        <th>Item Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="45%">@item.Name</td>
                            <td width="45%">@item.Item.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No type exists</p>
        }
    </div>