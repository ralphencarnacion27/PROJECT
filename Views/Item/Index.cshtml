@model IEnumerable<weba_folder.Models.Item>

    <div class="mt-4">
        <div class="row">
            <div class="col-6">
                <h2>Item List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-success ">
                    <i class="fa-solid fa-plus"></i> Add New Item
                </a>
            </div>
        </div>

        @if(Model.Count() > 0) {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    
                            @foreach (var item in Model)
                            {
                               <tr>
                                   <td width="90%">@item.Name</td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td class="text-right"> 
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-highlighter"></i> Edit</a> 
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-eraser"></i> Delete</a> 
                                    </td>
                                </tr>
                            }
                        
                </tbody>
            </table>
        }

        else {
            <p>No Item Exist</p>
        }
    </div>